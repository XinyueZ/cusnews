<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:entries="@array/lang_types"
        android:entryValues="@array/lang_values"
        android:key="key.lang.value"
        android:layout="@layout/setting_item"
        android:title="@string/setting_lang" />

    <CheckBoxPreference
        android:key="key.show.images"
        android:title="@string/setting_show_image"
        android:summaryOn="@string/btn_yes"
        android:summaryOff="@string/btn_no"
        android:layout="@layout/setting_item"
        android:defaultValue="true" />

</PreferenceScreen>